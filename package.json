{
  "name": "str-app",
  "version": "1.0.0",
  "description": "Structure app for the projects ",
  "main": "index.js",
  "author": "Dax <dixitvora@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "os": [
    "darwin",
    "linux"
  ],
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{js,jsx,md,html}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "turbo": "^1.10.13"
  },
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
